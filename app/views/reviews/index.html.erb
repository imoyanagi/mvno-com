<div class="container">
	<h2 class="text-center mt-5"><span class="text-info"><%= @plan.name %></span>のレビュー</h2>
	<% @reviews.each do |review| %>
		<div class="mt-5 mb-5 p-3 bg-light rounded">
			<h4 class="text-info"><%= review.title %></h4>
			<div class="row">
				<div class="col-2 d-flex flex-column">
					<%= image_tag("linemobile.png", size:"100x100",class:"mx-auto") %>
					<span class="review-user-name text-center">やくみつる</span>
				</div>
				<table class="table-borderless p-2">
					<tr>
						<td>総合評価</td>
						<td id="total_star<%= review.id %>"></td>
					</tr>
					<tr>
						<td>通信品質</td>
						<td id="internet_star<%= review.id %>"></td>
					</tr>
					<tr>
						<td>サポート品質　</td>
						<td id="support_star<%= review.id %>"></td>
					</tr>
					<tr>
						<td>価格</td>
						<td id="cost_star<%= review.id %>"></td>
					</tr>
				</table>
			</div>
				<div class="mt-4 p-3">
					<%= review.body %>
				</div>
				<% if review.user == current_user %>
					<div class="p-2">
						<%= render 'review_form', review: review %><%= link_to "削除", plan_review_path(@plan,review), method: :delete, class:"btn btn-danger ml-4" %>
					</div>
				<% end %>
			<script>
			$(document).on('turbolinks:load', function() {
				$('#total_star<%= review.id %>').raty({
				  readOnly: true,
				  size: 36,
				  score: <%= review.total_eval %>,
				  starOff:  '<%= asset_path('star-off.png') %>',
				  starOn : '<%= asset_path('star-on.png') %>',
				});
				$('#internet_star<%= review.id %>').raty({
				  readOnly: true,
				  size: 36,
				  score: <%= review.internet_eval %>,
				  starOff:  '<%= asset_path('star-off.png') %>',
				  starOn : '<%= asset_path('star-on.png') %>',
				});
				$('#support_star<%= review.id %>').raty({
				  readOnly: true,
				  size: 36,
				  score: <%= review.support_eval %>,
				  starOff:  '<%= asset_path('star-off.png') %>',
				  starOn : '<%= asset_path('star-on.png') %>',
				});
				$('#cost_star<%= review.id %>').raty({
				  readOnly: true,
				  size: 36,
				  score: <%= review.cost_eval %>,
				  starOff:  '<%= asset_path('star-off.png') %>',
				  starOn : '<%= asset_path('star-on.png') %>',
				});
			});
			</script>
		</div>
	<% end %>
</div>