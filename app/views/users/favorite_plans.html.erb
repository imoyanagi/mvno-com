<div class="container text-center">
	<div class="row mb-5">
		<div class="w-100"><h1 class="mt-4">マイページ</h1></div>
		<ul class="nav nav-tabs mt-4">
		  <li class="nav-item"><%= link_to "ユーザー・使用者情報", users_path, class:"nav-link" %></li>
		  <li class="nav-item"><%= link_to "お気に入りしたプラン", users_favorite_plans_path, class:"nav-link active" %></li>
		  <li class="nav-item"><%= link_to "乗り換え先情報", users_mnp_plans_path, class:"nav-link" %></li>
		  <li class="nav-item"><%= link_to "質問履歴", users_question_logs_path, class:"nav-link" %></li>
		  <li class="nav-item"><%= link_to "回答履歴", users_answer_logs_path, class:"nav-link" %></li>
		  <li class="nav-item"><%= link_to "いいねした投稿", users_favorite_posts_path, class:"nav-link" %></li>
		</ul>
		<div class="col-8 mt-4">
			<h4>お気に入りプラン一覧</h4>
			<% @favorite_plans.each do |favorite_plan| %>
			<div class="row bg-light mb-3 p-3 rounded border">
				<div class="col-3">
					<%= attachment_image_tag favorite_plan.plan.carrier,:carrier_image, fallback: "no_image.jpg", size: '100x100', class:"mx-auto" %>
				</div>
				<div class="col-9 text-left">
					<h5><%= link_to plan_path(favorite_plan.plan_id) do %><%= favorite_plan.plan.carrier.name %><br><%= favorite_plan.plan.name %></a></h5><% end %>
					<h5>料金　<span class="text-danger price-font-size"><%= favorite_plan.plan.bill %>円/月</span></h5>
					<h6>回線:<span class="text-secondary"><%= favorite_plan.plan.internet_type %></span> | データ量:<span class="text-secondary"><%= favorite_plan.plan.data_value %>GB</span></h6>
				</div>
			</div>
			<% end %>
		</div>
		<%= render 'profile' %>
	</div>
</div>
