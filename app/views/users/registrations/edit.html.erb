<div class="container text-center mt-5 mb-5">
  <h2>ユーザー編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size: '100x100' %>
      <%= f.attachment_field :profile_image, placeholder: "ジャケット画像", fallback: "no_image.jpg", size: '100×100' %>
    </div>

    <div class="field mt-4">
      <%= f.label :name, "ユーザー名" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field mt-4">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field mt-4">
      <%= f.label :password, "パスワード" %>（変更しない場合は空欄にしてください）<br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field mt-4">
      <%= f.label :current_password, "現在のパスワード" %> （必須）<br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "保存する", class:"btn btn-secondary"%>
    </div>
  <% end %>

  <div class="field mt-5">
    <p><%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>
  </div>

  <%= link_to "Back", :back %>
</div>
