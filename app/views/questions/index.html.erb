<div class="container text-center">
	<h1 class="mt-5">Q&A掲示板</h1>
	<div class="row mt-5 mb-5">
		<div class="col-8">
			<h3>Q&A一覧</h3>
			<div class="mt-3 border p-5 bg-light rounded">
				<div class="border-bottom border-dark p-3">
					<h5>カテゴリーを選択</h5>
					<select class="custom-select w-50">
					  <option selected>選択する</option>
					  <option value="1">mineo</option>
					  <option value="2">LINEモバイル</option>
					  <option value="3">その3</option>
					</select>
					<div class="input-group w-50 mx-auto mb-3 mt-4">
					  <input type="text" class="form-control" placeholder="Q&A内を検索" aria-label="..." aria-describedby="button-addon2">
					  <div class="input-group-append">
					    <button type="button" id="button-addon2" class="btn btn-outline-secondary">検索</button>
					  </div>
					</div>
					<div class="mt-4"><%= link_to "質問を投稿する", new_question_path, class:"btn btn-lg btn-primary" %></div>
				</div>
				<div class="mt-4">
					<% @questions.order("id desc").each do |question| %>
						<%= link_to question_path(question) do %>
							<div class="row mb-4 border rounded p-3 questionSelected">
								<div class="col-4 d-flex flex-column">
									<%= image_tag("linemobile.png", size:"80x80", class:"mx-auto") %>
									<h6><%= question.user.name %></h6>
								</div>
								<div class="col-8 text-left">
									<h5 class="text-info"><%= question.title %></h5>
									<h6>カテゴリ: <%= question.sub_category.name %></h6>
									good! 10件 | 回答 3件
								</div>
							</div>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-4">
			<h3>自分の質問</h3>
			<div class="mt-3 border p-5 bg-light rounded">
				<% @questions.where(user_id: current_user.id).order("id desc").each do |question| %>
					<%= link_to question_path(question) do %>
						<div class="mb-4 border rounded p-3 questionSelected">
							<h6 class="text-info text-left text-truncate"><%= question.title %></h6>
							<div class="row">
								<div class="col-4 d-flex flex-column justify-content-center">
									<%= image_tag("linemobile.png", size:"50x50", class:"mx-auto") %>
								</div>
								<div class="col-8 text-left">
									<h6>カテゴリ: <%= question.sub_category.name %></h6>
									<h6>good! 10件</h6>
									<h6>回答 3件</h6>
								</div>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>

			<h3 class="mt-4">自分の回答した質問</h3>
			<div class="mt-3 border p-5 bg-light rounded">
				<% @my_questions.each do |my_question| %>
					<%= link_to question_path(my_question) do %>
						<div class="row mb-4 border rounded p-3 questionSelected">
							<h6 class="text-info text-truncate"><%= my_question.title %></h6>
							<div class="col-4 d-flex flex-column justify-content-center">
								<%= image_tag("linemobile.png", size:"50x50", class:"mx-auto") %>
							</div>
							<div class="col-8 text-left">
								<h6>カテゴリ: <%= my_question.sub_category.name %></h6>
								<h6>good! 10件</h6>
								<h6>回答 3件</h6>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>