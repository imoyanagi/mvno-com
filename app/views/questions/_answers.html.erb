<% answer.answers.each do |answer| %>
	<div class="ml-3 mb-3 border p-4 bg-light rounded clearfix">
		<div class="mb-3 d-flex justify-content-start">
			<%= image_tag("linemobile.png", size:"100x100") %>
			<div class="ml-4 d-flex flex-column justify-content-end">
				<h5>返答No.<%= answer.id %></h5>
				<h5>返答者：<%= answer.user.name %></h5>
				<h6>3時間前</h6>
			</div>
		</div>
		<div class="border p-3">
			<p class=""><%= answer.body %></p>
		</div>
		<div class="mt-3 float-left"><h5>good! 10件　|　返信 1件</h5></div>
		<div class="mt-3 btn btn-primary float-right">この回答に返信する</div>
	</div>
	<% unless answer.answers.empty? %>
		<%= render 'answers', answer:answer %>
	<% end %>
<% end %>