<div class="col-4">
	<h3>自分の質問</h3>
		<div class="mt-3 border p-5 bg-light rounded">
		<% if @my_questions.present? %>
			<% @my_questions.each do |my_question| %>
				<%= link_to question_path(my_question) do %>
					<div class="mb-4 border rounded p-3 questionSelected">
						<h6 class="text-info text-left text-truncate"><%= my_question.title %></h6>
						<div class="row">
							<div class="col-4 d-flex flex-column justify-content-center">
								<%= attachment_image_tag my_question.user,:profile_image, fallback: "no_image.jpg", size: '50x50', class:"mx-auto" %>
							</div>
							<div class="col-8 text-left">
								<h6>カテゴリ: <%= my_question.sub_category.name %></h6>
								<h6>good! 10件</h6>
								<h6>回答 <%= my_question.answers.count %>件</h6>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		<% else %>
			<h4>投稿がありません。</h4>
		<% end %>
		</div>

	<h3 class="mt-4">自分の回答した質問</h3>
	<div class="mt-3 border p-5 bg-light rounded">
		<% if @answered_questions.present? %>
			<% @answered_questions.each do |answered_question| %>
				<%= link_to question_path(answered_question) do %>
					<div class="row mb-4 border rounded p-3 questionSelected">
						<h6 class="text-info text-truncate"><%= answered_question.title %></h6>
						<div class="col-4 d-flex flex-column justify-content-center">
							<%= attachment_image_tag answered_question.user,:profile_image, fallback: "no_image.jpg", size: '50x50', class:"mx-auto" %>
						</div>
						<div class="col-8 text-left">
							<h6>カテゴリ: <%= answered_question.sub_category.name %></h6>
							<h6>good! 10件</h6>
							<h6>回答 <%= answered_question.answers.count %>件</h6>
						</div>
					</div>
				<% end %>
			<% end %>
		<% else %>
			<h4>投稿がありません。</h4>
		<% end %>
	</div>
</div>