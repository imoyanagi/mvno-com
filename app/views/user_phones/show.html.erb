<div class="container-fluid">
	<div class="bg-light w-75 mx-auto p-3 mt-5 mb-5 rounded border clearfix">
		<%= image_tag("linemobile.png", size:"150x150", class:"mx-auto float-left") %>
		<div class="float-left ml-5"><h4><%= @plan.carrier.name %><br><%= @plan.name %></h4>
			<h5>料金　<span class="text-danger price-font-size"><%= @plan.bill %>円/月</span></h5>
			<h6>回線:<span class="text-secondary"><%= @plan.internet_type %></span> | データ量:<span class="text-secondary"><%= @plan.data_value %>GB</span></h6>
		</div>
	</div>
	<% @user_phones.each do |user_phone| %>
	<% calc_mnp_costs(@plan, @options, user_phone) %>
	<div class="row bg-light rounded p-3 m-3">
			    <div class="col-3 rounded p-3">
			    	<h5>使用者：<strong><%= user_phone.user_name %></strong></h5>
		    		<table class="table mt-3">
		    			<tr>
		    				<td>キャリア</td>
		    				<td><%= Carrier.find(user_phone.carrier_id).name %></td>
		    			</tr>
		    			<tr>
		    				<td>契約プラン</td>
		    				<td><%= user_phone.plan_name %></td>
		    			</tr>
		    			<tr>
		    				<td>料金</td>
		    				<td><%= user_phone.bill %>円/月</td>
		    			</tr>
		    			<tr>
		    				<td>契約日</td>
		    				<td><%= user_phone.contract_date %></td>
		    			</tr>
		    			<tr>
		    				<td>使用端末</td>
		    				<td><%= user_phone.phone_name %></td>
		    			</tr>
		    			<tr>
		    				<td>端末代</td>
		    				<td><%= user_phone.phone_bill%>円/月 x <%= user_phone.phone_bill_term %>回</td>
		    			</tr>
					</table>
				</div>
				<div class="col-9 row rounded p-3">
					<div class="col-9">
						<h4>計算結果</h4>
						<table class="table">
							<tr>
								<td>
									<table class="table">
										<thead class="thead-light">
						    				<th colspan="2">初期費用</th>
						    				<th></th>
									    </thead>
						    			<tr>
						    				<td>解約金</td>
						    				<td><%= user_phone.carrier.penalty_bill %>円</td>
						    			</tr>
						    			<tr>
						    				<td>番号移行手数料</td>
						    				<td><%= user_phone.carrier.mnp_bill %>円</td>
						    			</tr>
						    			<tr>
						    				<td>事務手数料</td>
						    				<td><%= @plan.carrier.initial_bill %>円</td>
						    			</tr>
						    			<tr>
						    				<th>合計</th>
						    				<th><%= @total_initial_cost %>円</th>
						    			</tr>
									</table>
								</td>
								<td>
									<table class="table result-right-table">
										<thead class="thead-light">
						    				<th colspan="2">毎月の料金</th>
						    				<th></th>
									    </thead>
						    			<tr>
						    				<td>基本料金</td>
						    				<td><%= @plan.bill %>円/月</td>
						    			</tr>
						    			<% @options.each do |option| %>
							    			<tr>
							    				<td><%= option.name %></td>
							    				<td><%= option.bill %>円/月</td>
							    			</tr>
							    		<% end %>
						    			<tr>
						    				<td>端末の残債</td>
						    				<td><%= user_phone.phone_bill %>円/月 x <%= user_phone.phone_bill_term %>回</td>
						    			</tr>
						    			<tr>
						    				<th>合計</th>
						    				<th><%= @total_monthly_bill %>円/月</th>
						    			</tr>
									</table>
								</td>
							</tr>
						</table>
					</div>
					<div class="col-3 d-flex flex-column justify-content-center">
						<div>
							<h5>1年間使うと・・・</h5>
							<h5 class="text-center">合計<span class="text-danger price-font-size"><%= @saved_cost_per_year %>円</span></h5>
							<h5 class="text-right">節約できます</h5>
						</div>
						<div>
							<% convert_to(@saved_cost_per_year) %>
							<h5 class="mt-4">これは<strong><%= @name %></strong></h5>
							<h5 class="text-center"><span class="text-danger price-font-size"><%= @number %></span>分です</h5>
						</div>
						<%= form_for(user_phone) do |f| %>
							<%= f.hidden_field :option_ids, value: @option_ids %>
							<%= f.hidden_field :plan_id, value: @plan.id %>
							<%= f.submit "乗り換え先に設定する", class:"btn btn-secondary" %>
						<% end %>
					</div>
				</div>
	</div>
	<% end %>
</div>